@* @model IEnumerable<Student> *@
@model IEnumerable<StudentView>
<a class="btn btn-primary" href="/student/add">Add</a>
<a class="btn btn-primary" href="/student/import">Import</a>
<div class="card m-3">
    <div class="card-header">
        <div class="card-title fw-bold"><h2>List of Students</h2></div>
    </div>
    <div class="card-body">
        <table class="table table-borderd">
            <thead class="table-dark">
                <tr>
                    <th>Id</th>
                    <th>Class</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Gender</th>
                    <th>Score</th>
                    <th>Command</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.StudentId</td>
                        <td>@item.ClassName</td>
                        <td>@item.FirstName</td>
                        <td>@item.LastName</td>
                        <td>@item.Email</td>
                        <td>@item.Gender</td>
                        <td>@item.Score</td>
                        <td>
                            <a class="btn btn-outline-primary" href="/student/details/@item.StudentId">Details</a>
                            <a class="btn btn-outline-primary" href="/student/edit/@item.StudentId">Edit</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="card-footer">
        <h3>Average Score: <b>@ViewBag.Average</b></h3>
    </div>
</div>