@* @model Student *@
@model StudentView
<div asp-validation-summary="All"></div>
<form method="post">
    <div class="row">
        <label class="col-2 form-label" asp-for="StudentId">Id</label>
        <div class="col-10">
            <input class="form-control" type="number" asp-for="StudentId">
        </div>
    </div>
    <div class="row">
        <label class="col-2 form-label" asp-for="ClassId">Class</label>
        <div class="col-4">
            <select class="form-select" asp-for="ClassId" asp-items="@ViewBag.Classes"></select>
        </div>
    </div>
    <div class="row">
        <label class="col-2 form-label" asp-for="FirstName">FirstName</label>
        <div class="col-10">
            <input class="form-control" type="text" asp-for="FirstName">
        </div>
    </div>
    <div class="row">
        <label class="col-2 form-label" asp-for="LastName">LastName</label>
        <div class="col-10">
            <input class="form-control" type="text" asp-for="LastName">
        </div>
    </div>
    <div class="row">
        <label class="col-2 form-label" asp-for="Email">Email</label>
        <div class="col-10">
            <input class="form-control" type="email" asp-for="Email">
        </div>
    </div>
    <div class="row">
        <label class="col-2 form-label" asp-for="Score">Score</label>
        <div class="col-10">
            <input class="form-control" type="number" asp-for="Score" step="0.01">
        </div>
    </div>
    <div class="row">
        <label class="col-2 form-label" asp-for="Gender">Gender</label>
        <div class="col-3">
            <select class="form-select" asp-for="Gender">
                <option value="0">Male</option>
                <option value="1">Female</option>
            </select>
        </div>
    </div>
    <div>
        <button class="btn btn-primary">Save Changes</button>
        <a href="/student" class="btn btn-outline-primary">Cancel</a>
    </div>
</form>