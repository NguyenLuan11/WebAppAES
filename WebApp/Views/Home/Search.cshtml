@* @model IEnumerable<Student> *@
@model IEnumerable<StudentView>
<table class="table table-borderd">
    <thead class="table-dark">
        <tr>
            <th>Id</th>
            <th>Class</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Gender</th>
            <th>Score</th>
            <th>Command</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model){
            <tr>
                <td>@item.StudentId</td>
                <td>@item.ClassName</td>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.Email</td>
                <td>@item.Gender</td>
                <td>@item.Score</td>
                <td>
                    <a class="btn btn-outline-btn" href="/student/details/@item.StudentId">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>